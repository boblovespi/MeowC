let fac: i32 -> i32 := n \mt {
    1; if n = 0,
    n * fac(n - 1); otherwise.
};

let fib: i32 -> i32 := n \mt {
    0; if n = 0,
    1; if n = 1,
    fib(n - 1) + fib(n - 2); otherwise.
};
